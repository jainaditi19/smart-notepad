<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

    <link rel="stylesheet" href="/stylesheets/style.css">
    <!-- no need to add public in path as express.static will take care of it -->
</head>

<body>
    <!-- <h1>Welcome <%= 2+2 %> -->
    </h1>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input type="text" id="title" name="title" placeholder="Enter your task here"
            class="block w-full rounded-md px-5 py-2 bg-zinc-800 text-white">
            <textarea name="details" id="description"
                class="block w-full rounded-md mt-2 px-5 py-2 bg-zinc-800 text-white resize-none"
                placeholder="enter details"></textarea>
            <input type="submit" value="Add Task" placeholder="Enter" class="mt-2 bg-blue-600 px-5 py-2 rounded-md">

            </form>
        </div>
        <div class="tasks flex gap-3 p-10">
            <% if(files.length> 0) { %>
                <%files.forEach(function(val) { %>
                    <div class="task w-72 px-3 py-2 rounded-md bg-zinc-800">
                        <h1 class="text-white text-lg font-semibold">
                            <%= val%>
                        </h1>
                        <a href="/files/<%= val%>" class="text-blue-500 initial-block mt-3 ">Read</a>

                        <a href="/edit/<%= val%>" class="text-blue-500 initial-block mt-3 pl-2">Edit</a>
                    </div>
                    <% })%>
                        <% } else { %>
                            <h3 class="text-zinc-600">No tasks yet</h3>
                            <% } %>


